{
  "name": "fulllite",
  "version": "1.0.0",
  "description": "**FullLite** es un template ligero para crear aplicaciones web sencillas con una arquitectura full stack. Combina un backend en **Express.js**, un frontend basado en **React**, y soporte para **conexión a bases de datos**, permitiendo un desarrollo rápido y estructurado.",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "prebuild": "npx vite build ./client --outDir ../public --emptyOutDir",
    "build": "npx rimraf ./dist && npx swc ./src -d ./dist --copy-files --config-file .swcrc",
    "postbuild": "mv ./dist/src/* ./dist && rmdir ./dist/src",
    "dev:server": "nodemon ./src/index.ts",
    "dev:client": "npx vite ./client",
    "dev": "concurrently --kill-others \"npm run dev:server\" \"npm run dev:client\"",
    "start": "node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  }
}